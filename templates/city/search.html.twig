{% extends 'base.html.twig' %}

{% block title %}{{ search }} | Delivereo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/restaurant.css') }}">
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="search-area">
                {{ form_start(form) }}
                    <div class="input-field search">
                        {{ form_widget(form.search, { 'attr': { 'class': 'modernize search field', 'placeholder': 'Entrer un nouveau code postal' } }) }}
                        <i class="material-icons">search</i>
                    </div>
                {{ form_end(form) }}
            </div>

            <div class="row">
                <div class="col s12">
                    Resultats pour la ville "{{ search }}"
                </div>
            </div>

            <div class="row">
                <div class="col s12 m12 l3">
                    <div class="card" id="sidedashboard">
                        <div class="card-content bg-white">
                            <span class="small-header">Trier par</span>
                            <li class="divider"></li>
                            <div class="categories">
                                <span class="small-subheader">Categories</span>
                                <p>
                                    <label>
                                        <input type="checkbox">
                                        <span>FastFood</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input type="checkbox">
                                        <span>Burger</span>
                                    </label>
                                </p>
                                <p>
                                    <label>
                                        <input type="checkbox">
                                        <span>Italien</span>
                                    </label>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12 m12 l9">
                    <div class="card">
                        <div class="card-content bg-white">
                            <div class="results">
                                <div class="collection modernize">
                                    {% if cities|length > 0 %}
                                        {% for city in cities %}
                                            <a href="#" class="collection-item modernize">{{ city.name }}, {{ city.zipCode }}</a>
                                        {% endfor %}
                                    {% else %}
                                        <span class="card-title">Aucun resultat</span>
                                    {% endif %}
                                </div>
                                {#<div class="row">#}
                                    {#<br>#}
                                    {#<div class="col s6 l2 offset-s4 offset-l5">#}
                                        {#<a href="void:javascript;" class="modernize bold waves-effect flex justify-center">#}
                                            {#<span>Voir tout</span>#}
                                        {#</a>#}
                                    {#</div>#}
                                {#</div>#}

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}