{% extends 'base.html.twig' %}

{% block title %}{{ search }} | Delivereo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/restaurant.css') }}">
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="search-area">
                {{ form_start(form) }}
                    <div class="input-field search">
                        {{ form_widget(form.search, { 'attr': { 'class': 'modernize search field', 'placeholder': 'Entrer un nouveau code postal' } }) }}
                        <i class="material-icons">search</i>
                    </div>
                {{ form_end(form) }}
            </div>

            <div class="row">
                <div class="col s12">
                    Resultats pour la ville "{{ search }}"
                </div>
            </div>

            <div class="row">
                <div class="col s12 m12">
                    <div class="card">
                        <div class="card-content bg-white">
                            <div class="results">
                                <div class="collection modernize">
                                    {% if cities|length > 0 %}
                                        {% for city in cities %}
                                            <a href="{{ path('find_restaurants_by_city', { 'city': city.id }) }}" class="collection-item modernize">{{ city.name }}, {{ city.zipCode }}</a>
                                        {% endfor %}
                                    {% else %}
                                        <h6 style="text-align: center;color: #999999;">Aucun resultat</h6>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}