{% extends 'bundles/FOSUserBundle/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Mot de passe {{ app.user.firstName }} | Delivereo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
    <link rel="stylesheet" href="{{ asset('css/restaurant.css') }}">
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block fos_user_content %}
    <div class="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col s12 m5 l4">
                    <div class="card" id="profileimage">
                        <div class="card-content">
                            <div class="image-wrapper">
                                {% if app.user.image is null %}
                                    <img src="https://res.cloudinary.com/dqwg570oo/image/upload/v1540289616/boss.png" alt="Default photo">
                                {% else %}
                                    <img src="{{ app.user.image.url }}" alt="Photo de {{ app.user.firstname }} {{ app.user.lastName }}">
                                {% endif %}
                            </div>
                            <div class="profile-cred">
                                <span class="profile-title">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                                <div class="location flex align-center justify-center">
                                    {% include 'inc/user_type.html.twig' %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12 m7 l8">
                    <div class="card">
                        <div class="card-content">
                            {% include 'inc/form_errors.html.twig' %}
                            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            {#{{ form_widget(form) }}#}
                            <div class="input-field">
                                {{ form_widget(form.current_password, { 'attr': { 'class': 'modernize', 'placeholder': 'form.current_password'|trans } }) }}
                            </div>
                            <div class="input-field">
                                {{ form_widget(form.plainPassword.first, { 'attr': { 'class': 'modernize', 'placeholder': 'form.new_password'|trans } }) }}
                            </div>
                            <div class="input-field">
                                {{ form_widget(form.plainPassword.second, { 'attr': { 'class': 'modernize', 'placeholder': 'form.new_password_confirmation'|trans } }) }}
                            </div>
                            <div class="input-field flex justify-center">
                                <input type="submit" class="btn modernize" value="{{ 'change_password.submit'|trans }}" />
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block footer %}{% endblock %}