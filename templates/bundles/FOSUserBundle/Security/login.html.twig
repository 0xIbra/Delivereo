{% extends "bundles/FOSUserBundle/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block title %}Connexion | Delivereo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block fos_user_content %}

    <div class="content-wrapper">
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <div class="card">
                    <div class="row">
                        <div class="col s12">
                            <div class="container-fluid">
                                <h3 class="heading">Connexion</h3>
                                {% if error %}
                                    <div class="alerts">
                                        <div class="alert danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    </div>
                                {% endif %}

                                <form action="{{ path("fos_user_security_check") }}" method="post">
                                    {% if csrf_token %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                    {% endif %}

                                    <div class="input-field">
                                        <input type="text" name="_username" value="{{ last_username }}" required autocomplete="username" class="modernize" placeholder="{{ 'security.login.username'|trans }}">
                                    </div>

                                    <div class="input-field">
                                        <input type="password" name="_password" required autocomplete="current-password" class="modernize" placeholder="{{ 'security.login.password'|trans }}">
                                    </div>

                                    <p>
                                        <label>
                                            <input type="checkbox" name="_remember_me" value="on">
                                            <span>{{ 'security.login.remember_me'|trans }}</span>
                                        </label>
                                    </p>

                                    <div class="input-field submit-wrapper">
                                        <input type="submit" value="{{ 'security.login.submit'|trans }}" name="_submit" class="modernize btn">
                                    </div>
                                </form>

                                <div class="row pad-20-0">
                                    <div class="flex justify-center">
                                        <a href="{{ path('fos_user_resetting_request') }}" class="redirect">Mot de passe oublie ?</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}